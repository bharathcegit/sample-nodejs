pipeline {
    agent {
        node {
            label 't054-runner'
        }
    }

    stages {
        stage('checkout') 
        {
            steps 
            {
                git credentialsId: 'ca-git-access', branch: 'development', url: "https://git.cloudavise.com/visops/t054/sample-nodejs.git"
            }
        }

        stage('Run Ansible') 
        {
            steps 
            {
                sh 'ansible-vault decrypt --vault-id /tmp/vault-id new_key.pem'
                sh 'chmod 400 new_key.pem'
                sh 'ansible-playbook -i inventory install-heroku.yml'
                sh 'ansible-playbook -i inventory deploy-on-heroku.yml'
            }
        }
    }
}
